generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Interview {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  topic     String
  date      DateTime @default(now())
  score     Int
  feedback  Json     // Stores the full FeedbackResult object
  transcript Json?   // Optional: Store the conversation transcript
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String 
}
